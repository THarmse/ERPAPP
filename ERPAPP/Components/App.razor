<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="typeof(ERPAPP.Components.Layout.MainLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(ERPAPP.Components.Layout.MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

<HeadOutlet />
